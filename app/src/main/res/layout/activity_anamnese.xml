<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnamneseActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".AnamneseActivityActivity"
        tools:showIn="@layout/activity_anamnese">

        <EditText
            android:id="@+id/txtNomeCompl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNomeCompl"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Idade"
            android:textColor="#000000"
            android:inputType="textPersonName"/>

        <Spinner
            android:id="@+id/spinSangue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIdade"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinPressao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinSangue"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinDiabete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinPressao"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtAlergia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinDiabete"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Tem alguma alergia?"
            android:textColor="#000000"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAlergia"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="EndereÃ§o Completo"
            android:textColor="#000000"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/txtBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEndereco"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Bairro"
            android:textColor="#000000"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtBairro"
            android:text="Cadastrar"
            android:background="#b40431"
            android:textColor="#ffffff"/>



    </RelativeLayout>

</ScrollView>